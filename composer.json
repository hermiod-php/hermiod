{
  "name": "hermiod/hermiod",
  "type": "library",
  "description": "A library to validate json against native PHP objects and hydrate from JSON to PHP",
  "keywords": [
    "json",
    "body",
    "schema",
    "validator",
    "hydrator"
  ],
  "homepage": "https://github.com/jdjenvey/json-objectify",
  "license": "MIT",
  "authors": [
    {
      "name": "Joel Jenvey",
      "email": "jdjenveys@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.2",
    "ext-json": "*",
    "laminas/laminas-hydrator": "^4.16"
  },
  "require-dev": {
    "ext-pcntl": "*",
    "phpunit/phpunit": "^11.5.3",
    "phpstan/phpstan": "^2.1.2",
    "rregeer/phpunit-coverage-check": "^0.3.1",
    "roave/security-advisories": "dev-latest",
    "ramsey/uuid": "^4.7"
  },
  "autoload": {
    "psr-4": {
      "Hermiod\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Hermiod\\Tests\\Unit\\": "tests/unit/",
      "Hermiod\\Tests\\Integration\\": "tests/integration/",
      "Hermiod\\Tests\\System\\": "tests/system/"
    }
  },
  "scripts": {
    "tests": [
      "composer install",
      "@analyse",
      "@tests-unit",
      "@tests-integration",
      "@tests-system"
    ],
    "tests-coverage": [
      "composer install",
      "@analyse",
      "@tests-unit-coverage --coverage-clover ./test-reports/coverage/xml/clover.xml",
      "vendor/bin/coverage-check ./test-reports/coverage/xml/clover.xml 100",
      "@tests-integration"
    ],
    "tests-ci": [
      "composer install",
      "composer outdated --minor-only --direct --strict",
      "composer audit --no-dev",
      "@analyse",
      "export XDEBUG_MODE=coverage && vendor/bin/phpunit -c tests/phpunit.xml --testsuite unit --path-coverage  --coverage-clover ./test-reports/coverage/xml/clover.xml --log-junit ./test-reports/results/unit/junit.xml",
      "vendor/bin/coverage-check ./test-reports/coverage/xml/clover.xml 100",
      "@tests-integration",
      "@tests-system"
    ],
    "analyse": "vendor/bin/phpstan analyse --level max ./src",
    "tests-unit": "vendor/bin/phpunit -c tests/phpunit.xml --testsuite unit",
    "tests-unit-coverage": "export XDEBUG_MODE=coverage && vendor/bin/phpunit -c tests/phpunit.xml --testsuite unit --path-coverage  --coverage-html ./test-reports/coverage/html",
    "tests-integration": "vendor/bin/phpunit -c tests/phpunit.xml --testsuite integration --log-junit ./test-reports/results/integration/junit.xml",
    "tests-system": "vendor/bin/phpunit -c tests/phpunit.xml --testsuite system --log-junit ./test-reports/results/system/junit.xml"
  }
}
